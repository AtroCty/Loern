<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<gradient
                android:startColor="#A0F1FD"
                android:endColor="#52CDFF"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#888888" />
            <corners android:bottomRightRadius="25dip"
        		android:bottomLeftRadius="25dip"  
        		android:topRightRadius="25dip"
       			 android:topLeftRadius="25dip"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#fefefe"
                android:endColor="#cccccc"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#aaaaaa" />
            <corners android:bottomRightRadius="26dip"
       	 		android:bottomLeftRadius="26dip"  
       		 	android:topRightRadius="26dip"
        		android:topLeftRadius="26dip"/>
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>