        <shape>
            <gradient
                android:startColor="#FF707F"
                android:endColor="#FF1A2E"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#aaaaaa" />
            <corners android:bottomRightRadius="26dip"
       	 		android:bottomLeftRadius="26dip"  
       		 	android:topRightRadius="26dip"
