<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:background="@drawable/time_bar"
        android:max="1200"
        android:progressDrawable="@drawable/time_bar"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/zeit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Punkte"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#550000"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/punkte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="Zeit"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#005500"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/FrageLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zeit"
        android:background="@drawable/button"
        android:gravity="center"
        android:orientation="horizontal" >

        <de.atrocty.loern.AutoResizeTextView
            android:id="@+id/frage"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Frage"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <FrameLayout
            android:id="@+id/difficulty"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/roundbutton" >

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/AntwortLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/progressBar1"
        android:layout_alignLeft="@+id/progressBar1"
        android:layout_below="@+id/FrageLayout"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/answer1"
                style="@style/ButtonText"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundbutton"
                android:text="1"
                tools:ignore="HardcodedText" />

            <de.atrocty.loern.AutoResizeTextView
                android:id="@+id/textView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Antwort  1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="#aaaaaa" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/answer2"
                style="@style/ButtonText"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundbutton"
                android:text="2"
                tools:ignore="HardcodedText" />

            <de.atrocty.loern.AutoResizeTextView
                android:id="@+id/TextView01"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Antwort 2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="#aaaaaa" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/answer3"
                style="@style/ButtonText"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundbutton"
                android:text="3"
                tools:ignore="HardcodedText" />

            <de.atrocty.loern.AutoResizeTextView
                android:id="@+id/TextView03"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Antwort 3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="#aaaaaa" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/answer4"
                style="@style/ButtonText"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundbutton"
                android:text="4"
                tools:ignore="HardcodedText" />

            <de.atrocty.loern.AutoResizeTextView
                android:id="@+id/TextView02"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Antwort 4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="60dp"
            android:background="#aaaaaa" >
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/answer5"
                style="@style/ButtonText"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/roundbutton"
                android:text="5"
                tools:ignore="HardcodedText" />

            <de.atrocty.loern.AutoResizeTextView
                android:id="@+id/TextView04"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="Antwort 5"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:ignore="HardcodedText" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>